.menu-item
  display: flex
  position: relative
  padding-top: 25px
  padding-bottom: 25px
  border-bottom: 1px solid #f0f0f0
  .img
    margin-right: 10px
    width: 62px
    height: 62px
  .menu-item-right
    flex: 1
  .item-title
    font-size: 16px
    color: #2f2f2f
  .item-desc,
  .item-zan
    margin-top: 6px
    padding-right: 4px
    line-height: 14px
    font-size: 12px
    color: #a9a9a9
    &.item-desc
      line-height: 17px
  .item-price
    margin-top: 10px
    font-size: 18px
    color: #fe4d3d
  .unit
    font-size: 12px
    color: #a9a9a9
  .select-content
    display: flex
    position: absolute
    right: 9px
    bottom: 21px
  .plus
    width: 25px
    height: 25px
    background-size: 100% 100%
    background-image: url("./img/plus.png")
  .minus
    width: 25px
    height: 25px
    background-size: 100% 100%
    background-image: url("./img/minus.png")
  .count
    margin-left: 2px
    margin-right: 2px
    width: 20px
    height: 25px
    line-height: 25px
    text-align: center
    font-size: 15px
    color: #2f2f2f