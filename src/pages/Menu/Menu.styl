.menu-inner
  display: flex
  position: absolute
  right: 0
  left: 0
  bottom: 0
  top: 174px
  overflow: hidden
  .left-bar
    width: 85px
    height: 100%
    overflow: auto
    -webkit-overflow-scrolling: touch
    background-color: #efefef
  .left-bar-inner
    padding-bottom: 85px
  .left-item
    display: flex
    justify-content: center
    border-bottom: 1px solid #bfbfbf
    height: 60px
    text-align: center
    font-size: 14px
    color: #656565
    &.active
      background-color: #fff
  .item-text
    align-self: center
    line-height: 20px
    text-align: center
  .item-icon
    display: inline-block
    margin-right: 6px
    width: 20px
    height: 20px
    vertical-align: -4px
  .right-list
    height: 100%
  .right-list-inner
    padding-bottom: 85px
    font-size: 16px
  .right-content
    flex: 1
    margin-left: 10px
    height: 100%
    overflow: auto
    -webkit-overflow-scrolling: touch
  .right-title
    margin-top: 10px
    padding-left: 4px
    border-left: 2px solid #ffd161
    font-size: 13px
    color: #333
  .mask
    position: absolute
    top: 0
    left: 0
    right: 0
    bottom: 0
    background-color: rgba(0, 0, 0, 0.7)