.login-page
  .login-header
    position: relative
    height: auto
    margin: 2.5rem auto
  .form
    display: flex
    align-items: center
    margin: .8rem 0
  .error
    margin: .5rem 0
    padding: .6rem
    border: .0625rem solid #f5d8a7
    font-size: .5rem
    background: #fff6db
  .input
    margin: .625rem 0
    border-radius: .3125rem
  .password
    margin: .625rem 0
  .foot
    margin: .625rem 0
  .btn
    box-sizing: border-box
    margin: .625rem 0
    width: 100%
  .link
    float: right
    text-decoration: none
    color: #00f

