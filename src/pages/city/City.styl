.header
  position: relative
  height: 3rem
  line-height: 3rem
  text-align: center
  font-size: 1rem
  color: #000
  background: #facb46
  overflow: hidden
  .header-back
    position: absolute
    top: 0
    left: 0
    width: 4rem
    height: 100%
    text-align: center
    font-size: 1rem
    color: #fff
  .icon-arrow_lift
    position absolute
    top: 50%
    left: 50%
    transform: translate(-50%, -50%)
.search-wrapper
  position absolute
  left: 0
  right: 0
  top: 3rem
  bottom: 0
.search
  padding: 0 .4rem
  height: 3rem
  line-height 3rem
  background: #facb46
  .search-input
    box-sizing: border-box
    padding: 0 .1rem
    border-radius: .2rem
    width: 100%
    height: 2rem
    line-height: 2rem
    text-align: center
    color: #666
.search-content
  z-index: 1
  position: absolute
  left: 0
  right: 0
  top: 3rem
  bottom: 0
  height: 100%
  background: #eee
  overflow: hidden
  .search-item
    padding-left: .2rem
    height: 2rem
    line-height: 2rem
    color: #666
    background: #fff