@import '../../assets/stylus/mixin.styl'
.star
  display: inline-block
  font-size: 0
  .star-item
    display: inline-block
    background-repeat: no-repeat
  &.star-48
    margin: 0 1.375rem 0 0
    .star-item
      width: 1.25rem
      height: 1.25rem
      background-size: 1.25rem 1.25rem
      &:last-child
        margin: 0
      &.on
        bg-image("./img/star48_on")
      &.half
        bg-image("./img/star48_half")
      &.off
        bg-image("./img/star48_off")
  &.star-36
    .star-item
      width: .9375rem
      height: .9375rem
      background-size: .9375rem .9375rem
      @media only screen and (max-width: 320px)
        width: .625rem
        height: .625rem
        background-size: .625rem .625rem
        &.on
          bg-image("./img/star24_on")
        &.half
          bg-image("./img/star24_half")
        &.off
          bg-image("./img/star24_off")
      &:last-child
        margin: 0
      &.on
        bg-image("./img/star36_on")
      &.half
        bg-image("./img/star36_half")
      &.off
        bg-image("./img/star36_off")
  &.star-24
    // margin: 0 .1875rem 0 0
    .star-item
      width: .625rem
      height: .625rem
      background-size: .625rem .625rem
      &:last-child
        margin: 0
      &.on
        bg-image("./img/star24_on")
      &.half
        bg-image("./img/star24_half")
      &.off
        bg-image("./img/star24_off")