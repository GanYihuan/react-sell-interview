/* One pixel line */
border-1px($color)
  position: relative
  &:after
    display: block
    position: absolute
    left: 0
    bottom: 0
    width: 100%
    border-top: 1px solid $color
    content: ' '
/* none One pixel line */
border-none()
  &:after
    display: none
/* 2x3x image */
bg-image($url)
  background-image: url($url + "@2x.png")
  @media (-webkit-min-device-pixel-ratio: 3)
    background-image: url($url + "@3x.png")
  @media (min-device-pixel-ratio: 3)
    background-image: url($url + "@3x.png")
ellipsis()
  overflow: hidden
  white-space: nowrap
  text-overflow: ellipsis
/* clear float */
.clearfix
  display: inline-block
  &:after
    display: block
    height: 0
    line-height: 0
    visibility: hidden
    clear: both
    content: ''
